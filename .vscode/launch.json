    "version": "0.2.0",
    "configurations": [
        {
            "name": "ai resume server",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}/airesumeeditor/main_server.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--debug",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
